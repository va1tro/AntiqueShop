<Page x:Class="AntiqueShop.Pages.FavoritesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AntiqueShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FavoritesPage">

    <Grid Background="#FFEEE0CB">
        <Border Background="White" CornerRadius="20" Padding="20"
                Margin="20"
                BorderBrush="#FF8B5E3C" BorderThickness="2">
            <DockPanel>
                <!-- Заголовок -->
                <TextBlock Text="Избранные товары"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#8B5E3C"
                           Margin="10"
                           DockPanel.Dock="Top"/>

                <!-- Счётчик -->
                <TextBlock x:Name="tbCounter"
                           FontSize="14"
                           Margin="10,0,10,10"
                           Foreground="Gray"
                           DockPanel.Dock="Top"/>

                <!-- Список избранного -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="listFavorites">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="15"
                                        Background="#FFF8F2E6"
                                        BorderBrush="#8B5E3C"
                                        BorderThickness="1"
                                        Margin="10"
                                        Padding="10">
                                    <DockPanel>
                                        <Image Source="{Binding CurrentPhoto}"
                                               Width="100" Height="100"
                                               Margin="10"
                                               Stretch="UniformToFill"
                                               DockPanel.Dock="Left"/>
                                        <StackPanel Margin="10">
                                            <TextBlock Text="{Binding name_item}"
                                                       FontSize="18"
                                                       FontWeight="Bold"
                                                       Foreground="#8B5E3C"/>
                                            <TextBlock Text="{Binding year, StringFormat='Год: {0}'}"
                                                       FontSize="14"
                                                       Foreground="Black"
                                                       Margin="0,5,0,0"/>
                                            <TextBlock Text="{Binding purchase_price,StringFormat ='Цена: {0:N2} ₽'}"
                                                       FontSize="14"
                                                       Foreground="Black"
                                                       Margin="0,0,0,5"/>
                                            <Button Content="Удалить из избранного"
                                                    Background="Transparent"
                                                    BorderBrush="#8B5E3C"
                                                    BorderThickness="1"
                                                    Foreground="#8B5E3C"
                                                    Width="160"
                                                    Height="30"
                                                    HorizontalAlignment="Left"
                                                    Click="RemoveFromFavorites_Click"/>
                                        </StackPanel>
                                    </DockPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Кнопка Назад -->
                <Button Content="Назад" Width="100" Height="30" Margin="10" Background="#8B5E3C" Foreground="White"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Left"
                        DockPanel.Dock="Bottom"
                        Click="Back_Click"/>
            </DockPanel>
        </Border>
    </Grid>
</Page>
