<Page x:Class="AntiqueShop.Pages.ItemDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AntiqueShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ItemDetailsPage">

    <Grid Background="#FFE8DCCA" Margin="20">
        <Border Background="White" Padding="20" CornerRadius="10" BorderBrush="#8B5E3C" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Image x:Name="ItemImage" Height="300" Stretch="Uniform" Margin="0,0,0,20"/>

                    <TextBlock x:Name="ItemName" FontSize="24" FontWeight="Bold" Foreground="#8B5E3C"/>

                    <TextBlock Text="Год выпуска:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBlock x:Name="ItemYear"/>

                    <TextBlock Text="Состояние:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBlock x:Name="ItemCondition"/>

                    <TextBlock Text="Подлинность:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBlock x:Name="ItemAuthenticity"/>

                    <TextBlock Text="Цена покупки:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBlock x:Name="ItemPurchasePrice"/>

                    <TextBlock Text="Цена продажи:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBlock x:Name="ItemSellingPrice"/>

                    <TextBlock Text="Дата поступления:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBlock x:Name="ItemArrivalDate"/>

                    <Button Content="Назад" Margin="0,20,0,0" Click="BackButton_Click" Width="100"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
