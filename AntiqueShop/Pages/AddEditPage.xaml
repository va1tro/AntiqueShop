<Page x:Class="AntiqueShop.Pages.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AntiqueShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление/Редактирование товара"
      Background="#FFE8DCCA">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="{Binding Title}" FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10,0,20"/>

        <!-- Основная форма -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Изображение товара -->
                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="6" 
                        BorderBrush="#FFA58B5F" BorderThickness="1" CornerRadius="5" 
                        Margin="5" Padding="5" Background="White">
                    <Image x:Name="imgItem" Source="/Images/picture.jpg" 
                           Stretch="Uniform" MaxHeight="200" MinHeight="150"/>
                </Border>
                <Button Grid.Row="5" Grid.Column="0" Content="Выбрать изображение" 
                        Width="150" Margin="5" HorizontalAlignment="Center" 
                        Click="BtnSelectImage_Click"/>

                <!-- Основные поля -->
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Наименование товара:" Margin="5"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="tbName" Margin="5"/>

                <TextBlock Grid.Row="2" Grid.Column="1" Text="Год изготовления:" Margin="5"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="tbYear" Margin="5"/>

                <TextBlock Grid.Row="4" Grid.Column="1" Text="Поставщик:" Margin="5"/>
                <ComboBox Grid.Row="5" Grid.Column="1" x:Name="cbSupplier" Margin="5" DisplayMemberPath="name_supplier"/>

                <!-- Финансовые поля -->
                <TextBlock Grid.Row="8" Grid.Column="0" Text="Цена покупки:" Margin="5"/>
                <TextBox Grid.Row="8" Grid.Column="1" x:Name="tbPurchasePrice" Margin="5"/>

                <TextBlock Grid.Row="9" Grid.Column="0" Text="Цена продажи:" Margin="5"/>
                <TextBox Grid.Row="9" Grid.Column="1" x:Name="tbSellingPrice" Margin="5"/>

                <TextBlock Grid.Row="10" Grid.Column="0" Text="Дата поступления:" Margin="5"/>
                <DatePicker Grid.Row="10" Grid.Column="1" x:Name="dpArrivalDate" Margin="5"/>

                <!-- Выпадающие списки -->
                <TextBlock Grid.Row="11" Grid.Column="0" Text="Категория:" Margin="5"/>
                <ComboBox Grid.Row="11" Grid.Column="1" x:Name="cbCategory" Margin="5" DisplayMemberPath="name_category"/>

                <TextBlock Grid.Row="12" Grid.Column="0" Text="Материал:" Margin="5"/>
                <ComboBox Grid.Row="12" Grid.Column="1" x:Name="cbMaterial" Margin="5" DisplayMemberPath="name_material"/>

                <TextBlock Grid.Row="13" Grid.Column="0" Text="Страна происхождения:" Margin="5"/>
                <ComboBox Grid.Row="13" Grid.Column="1" x:Name="cbCountry" Margin="5" DisplayMemberPath="name_country"/>
                
                <TextBlock Grid.Row="14" Grid.Column="0" Text="Статус:" Margin="5"/>
                <ComboBox Grid.Row="14" Grid.Column="1" x:Name="cbStatus" Margin="5" DisplayMemberPath="name_status"/>
                <!-- Дополнительные характеристики -->
                <TextBlock Grid.Row="6" Grid.Column="0" Text="Состояние:" Margin="5,16,5,26" Grid.RowSpan="2"/>
                <ComboBox Grid.Row="6" Grid.Column="1" x:Name="cbCondition" Margin="5">
                    <ComboBoxItem Content="Отличное"/>
                    <ComboBoxItem Content="Хорошее"/>
                    <ComboBoxItem Content="Удовлетворительное"/>
                    <ComboBoxItem Content="Плохое"/>
                </ComboBox>

                <TextBlock Grid.Row="7" Grid.Column="0" Text="Подлинность:" Margin="5,15,5,29" Grid.RowSpan="2"/>
                <ComboBox Grid.Row="7" Grid.Column="1" x:Name="cbAuthenticity" Margin="5">
                    <ComboBoxItem Content="Подлинный"/>
                    <ComboBoxItem Content="Реставрированный"/>
                    <ComboBoxItem Content="Копия"/>
                </ComboBox>
            </Grid>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnSave" Content="Сохранить" Width="100" Margin="5" 
                    Background="#FFA58B5F" Foreground="White" Click="BtnSave_Click"/>
            <Button x:Name="btnCancel" Content="Отмена" Width="100" Margin="5" 
                    Background="#FFA58B5F" Foreground="White" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Page>
