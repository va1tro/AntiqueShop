<Page x:Class="AntiqueShop.Pages.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AntiqueShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление/Редактирование товара">

    <Grid Background="#FFEEE0CB">
        <Border Background="White" CornerRadius="10" Padding="20" BorderBrush="#8B5E3C" BorderThickness="2">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Информация о товаре" FontSize="24" FontWeight="Bold"
                        Foreground="#8B5E3C" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="Название товара:" FontWeight="Bold" Foreground="#8B5E3C"/>
                    <TextBox x:Name="tbName" Margin="0,5,0,10"/>

                    <TextBlock Text="Год выпуска:" FontWeight="Bold" Foreground="#8B5E3C"/>
                    <TextBox x:Name="tbYear" Margin="0,5,0,10"/>

                    <TextBlock Text="Состояние:" FontWeight="Bold" Foreground="#8B5E3C"/>
                    <TextBox x:Name="tbCondition" Margin="0,5,0,10"/>

                    <TextBlock Text="Подлинность:" FontWeight="Bold" Foreground="#8B5E3C"/>
                    <TextBox x:Name="tbAuthenticity" Margin="0,5,0,10"/>

                    <TextBlock Text="Цена покупки:" FontWeight="Bold" Foreground="#8B5E3C"/>
                    <TextBox x:Name="tbPurchasePrice" Margin="0,5,0,10"/>

                    <TextBlock Text="Цена продажи:" FontWeight="Bold" Foreground="#8B5E3C"/>
                    <TextBox x:Name="tbSellingPrice" Margin="0,5,0,10"/>

                    <TextBlock Text="Дата поступления:" FontWeight="Bold" Foreground="#8B5E3C"/>
                    <DatePicker x:Name="dpArrivalDate" Margin="0,5,0,10"/>

                    <TextBlock Text="Изображение (имя файла):" FontWeight="Bold" Foreground="#8B5E3C"/>
                    <TextBox x:Name="tbImage" Margin="0,5,0,10"/>

                    <!-- Выпадающие списки -->
                    <TextBlock Text="Категория:" FontWeight="Bold" Foreground="#8B5E3C"/>
                    <ComboBox x:Name="cbCategory" Margin="0,5,0,10"/>

                    <TextBlock Text="Материал:" FontWeight="Bold" Foreground="#8B5E3C"/>
                    <ComboBox x:Name="cbMaterial" Margin="0,5,0,10"/>

                    <TextBlock Text="Поставщик:" FontWeight="Bold" Foreground="#8B5E3C"/>
                    <ComboBox x:Name="cbSupplier" Margin="0,5,0,10"/>

                    <TextBlock Text="Статус:" FontWeight="Bold" Foreground="#8B5E3C"/>
                    <ComboBox x:Name="cbStatus" Margin="0,5,0,10"/>

                    <TextBlock Text="Страна происхождения:" FontWeight="Bold" Foreground="#8B5E3C"/>
                    <ComboBox x:Name="cbOriginCountry" Margin="0,5,0,20"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Сохранить" Width="100" Margin="5" Background="#8B5E3C" Foreground="White" Click="Save_Click"/>
                        <Button Content="Отмена" Width="100" Margin="5" Click="Cancel_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
